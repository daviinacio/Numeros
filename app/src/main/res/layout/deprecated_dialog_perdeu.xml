<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:padding="5dp"
	android:gravity="center_vertical"
    android:orientation="vertical">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:gravity="center"
			android:orientation="vertical">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/Numeros"
				android:textColor="#ffffff"
				android:text="0"
				android:id="@+id/perdeu_acertos"/>
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/Pontos"
				android:textColor="#ffffff"
				android:text="Acertos"
				android:id="@+id/perdeu_acertos_label"/>
			
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/Numeros"
				android:textColor="#ffffff"
				android:text="0"
				android:id="@+id/perdeu_pontos"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/Pontos"
				android:textColor="#ffffff"
				android:text="Pontos"
				android:id="@+id/perdeu_pontos_label"/>

		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:gravity="center"
			android:orientation="vertical">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/Numeros"
				android:textColor="#ffffff"
				android:text="0"
				android:id="@+id/perdeu_erros"/>
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/Pontos"
				android:textColor="#ffffff"
				android:text="Erros"
				android:id="@+id/perdeu_erros_label"/>
		
		</LinearLayout>
		
	</LinearLayout>
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="10dp">
		
		<ProgressBar
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@android:style/Widget.ProgressBar.Horizontal"
			android:id="@+id/perdeu_media"/>
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="@dimen/Pontos"
			android:textColor="#ffffff"
			android:text="50%"
			android:gravity="center"
			android:id="@+id/perdeu_media_label"/>
		
	</RelativeLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:layout_marginRight="50dp"
		android:layout_marginLeft="50dp"
		android:gravity="center_vertical">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="10dp"
			android:textColor="#ffffff"
			android:textSize="15dp"
			android:text="Player:"/>
		
		<Spinner
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/perdeu_player"/>
		
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp"
		android:gravity="right"
		android:orientation="horizontal">

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#00ffffff"
			android:textColor="@color/colorAccent"
			android:layout_margin="1.5dp"
			android:text="Ver pontos"
			android:id="@+id/perdeu_viewScores"/>
	
		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="0.5"
			android:text=""/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#00ffffff"
			android:textColor="@color/colorAccent"
			android:layout_margin="1.5dp"
			android:text="Tentar novamente"
			android:id="@+id/perdeu_tryAgain"/>

	</LinearLayout>
	
	<ListView
		android:layout_width="match_parent"
		android:layout_height="0dp"/>
    
</LinearLayout>
